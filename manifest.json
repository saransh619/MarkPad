{
  "manifest_version": 3,
  "author": "Saransh Pachhai",
  "name": "MarkPad",
  "version": "1.0",
  "description": "A distraction-free notepad with Markdown support.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"]
}